<style>
    .no-js #loader {
        display: none;
    }

    .js #loader {
        display: block;
        position: absolute;
        left: 100px;
        top: 0;
    }

    .loading {
        position: fixed;
        left: 0px;
        top: 0px;
        width: 100%;
        height: 100%;
        z-index: 9999;
        background: url("Gear-2.4s-200px.gif") center no-repeat #f4f2ec;
    }
</style>

<body>
    <div class="loading"></div>
    <% include navbar.ejs %>
    <div id="container">
        <form autocomplete="off" id="editOrder" action="">
            <div class="row">
                <p id="orderId" style="display: none"><%=orderId%></p>
                <div class="input-field col l12">
                    <select name="" id="firmSelect"></select>
                    <label for="Firma">Firma</label>
                </div>
                <div class="input-field col l12">
                    <span>Sipariş No</span>
                    <input type="text" id="orderNo">
                    <!-- <label for="">Sipariş No</label> -->
                </div>
                <div class="input-field col l12">
                    <span>Tutar</span>
                    <input type="number" id="inputOrderPrice">

                </div>
                <div class="input-field col l12">
                    <select name="" id="inputOrderCurrency">
                        <option value="$">Dolar</option>
                        <option value="€">Euro</option>
                        <option value="₺">Lira</option>
                    </select>
                    <label for="">Döviz</label>
                </div>
                <div class="input-field col l12">
                    <select class="" id="orderSelect">

                    </select>
                    <label for="">Sipariş Durumu</label>
                </div>
                <div class="input-field col l12">
                    <span>Siparişin Alındığı Tarih</span>
                    <input type="text" class="" id="inputOrderDate">
                </div>
                <div class="input-field col l12">
                    <span>Termin Tarihi</span>
                    <input type="text" class="" id="inputDeadline">
                </div>
                <div class="input-field col l12">
                    <span>Ödeme Tarihi</span>
                    <input type="text" class="" id="inputPaymentDate">
                </div>
                <div class="input-field col l12">
                    <span>Notlar</span>
                    <textarea class="" id="orderNotes" rows="5"></textarea>
                </div>
