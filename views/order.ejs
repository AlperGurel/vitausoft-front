<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge"> 
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/order.css">
    <link rel="stylesheet" href="/js-datepicker/dist/datepicker.min.css">
    <title>Sipariş</title>
</head>
<body>
    <div class="app">

        <% include navbar.ejs %>
        <h2>Notifications</h2>
        <h2>Sipariş</h2>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addModal" onclick="clearCache();setCreationDate()">Yeni Sipariş</button>
        <table id="orders" class="table table-hover">
            <tr id="tableHead">
                <th onclick="sortByCompany()">Company</th>
                <th onclick="sortByOrderNumber()">Order Number</th>
                <th onclick="sortByStatus()">Status</th>
                <th onclick="sortByOrderDate()">Order Date</th>
                <th onclick="sortByTermin()">Termin</th>
                <th onclick="sortByPaymentDate()">Payment Date</th>
            </tr>
        </table>
        <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Yeni Sipariş</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form autocomplete="off" action="" id="CreateNewModal">
                            <label for="firmSelect">Firma</label>
                            <select class="form-control" id="firmSelect">
                            </select>
                            <div class="form-group">
                                <label for="inputOrderNumber">Sipariş No</label>
                                <input type="text" class="form-control" id="inputOrderNumber" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label for="inputOrderPrice">Tutar</label>
                                <input type="number" class="form-control" id="inputOrderPrice">
                            </div>
                            <label for="inputOrderCurrency">Döviz</label>
                            <select class="form-control" id="inputOrderCurrency"></select>
                            <label for="sel1">Sipariş Durumu</label>
                            <select class="form-control" id="orderSelect">
                            </select>
                            <div class="form-group">
                                <label for="inputOrderDate">Siparişin Alındığı Tarih</label>
                                <input type="text" class="form-control" id="inputOrderDate" data-language='tr'>
                            </div>
                            <div class="form-group">
                                <label for="inputDeadline">Termin Tarihi</label>
                                <input type="text" class="form-control" id="inputDeadline" data-language='tr'>
                            </div>
                            <div class="form-group">
                                <label for="inputPaymentDate">Ödeme Tarihi</label>
                                <input type="text" class="form-control" id="inputPaymentDate" data-language='tr'>
                            </div>
    
                        </form>
                    </div>
                    <div class="modal-footer">
                        <p id="fillWarning"></p>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                        <button type="button" class="btn btn-primary" id="saveNew" onclick="getDateFromForm()" data-dismiss="modal">Kaydet</button>
                    </div>
                    <p></p>
                    <p></p>
                    <p></p>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="/vue/dist/vue.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
<script src="/js-datepicker/dist/datepicker.min.js"></script>
<script src="/js/order.js"></script>
</html>